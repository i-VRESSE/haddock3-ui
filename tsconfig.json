{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"module": "ES2020",
		"declaration": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"isolatedModules": true,
		"useDefineForClassFields": true
	},
	"include": ["src"]
}
